<% if @items.empty? %>
  <h1>Your cart is empty!</h1>
<% else %>
  <h1>Cart Items</h1>
    <% @items.each do |item| %>
      <section id= "cart_item-<%= item.id %>"
        <h2><%= item.name %></h2>
        <img src= <%= item.image %>>
        <p>Sold by: <%= item.merchant.name %></p>
        <p>Price: <%= number_to_currency(item.price) %> </p>
        <p>Quantity: <%= cart.contents[item.id.to_s] %></p>
        <h4>Subtotal: <%=  number_to_currency(cart.subtotal(item.id, cart.contents[item.id.to_s])) %></h4>
        <% end %>
      </section>
    <h2>Grand Total: <%= number_to_currency(cart.grand_total) %> </h2>
    <%= button_to 'Empty Cart', '/cart', method: :destroy %>
<% end %>



