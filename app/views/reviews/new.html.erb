<h1>Create New Review For <%=link_to @item.name, "/items/#{@item.id}" %></h1>

<center>
  <%= form_tag "/items/#{@item.id}" do %>
    <%= label_tag :title %>:
    <%= text_field_tag :title %>

    <%= label_tag :content %>:
    <%= text_field_tag :content %>

    <%= label_tag :rating %>:
    <br /> 
    <%= number_field_tag :rating, nil, within: 1..5 %>

    <%= submit_tag 'Create Review' %>
  <% end %>
</center>
