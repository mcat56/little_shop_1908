<!DOCTYPE html>
<html>
  <head>
    <title>Little Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav" >
      <%= link_to 'Home', '/' %>
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
      <div id= 'search_button' class = "topnav" style="background-color:#002244;">
          <p><%= form_tag('/orders/search', method: 'get' ) do %></p>
          <%= search_field_tag 'search', params[:search], class: 'form-control', placeholder: 'Order Verification Number'  %>
          <%= submit_tag "Search", class: 'btn btn-default', :name => nil %>
        <% end %>
      < /div>
      <p style="color:black; position:absolute; top:0; right:0; padding:0.2px 10px;"><%= link_to "Cart: #{cart.total_count}", '/cart' %></p>
    </nav>
    <p class='flash'><%= flash.notice %></p>
    <%= yield %>
  </body>
</html>
